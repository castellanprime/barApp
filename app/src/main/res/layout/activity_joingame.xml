<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.spartahacks.app.bargamescores.JoinGameActivity">

    <TextView
        android:layout_width="@dimen/mainactivity_btn_width"
        android:layout_height="@dimen/mainactivity_btn_height"
        android:id="@+id/joinactivity_codeLabel"
        android:text="@string/joinactivity_codeLabel_txt"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/joinactivity_codeLabel_textSize"
        android:layout_marginTop="@dimen/mainactivity_createBtn_marginTop"
        />

    <EditText
        android:layout_width="@dimen/mainactivity_btn_width"
        android:layout_height="@dimen/mainactivity_btn_height"
        android:id="@+id/joinactivity_codeInputTextBox"
        android:lines="1"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/mainactivity_joinBtn_marginBottom"
        />

    <Button
        android:layout_width="@dimen/mainactivity_btn_width"
        android:layout_height="@dimen/mainactivity_btn_height"
        android:id="@+id/joinactivity_submitBtn"
        android:text="@string/joinactivity_submitBtn_txt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>
